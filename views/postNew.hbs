<!DOCTYPE html>
<html lang="en">
    {{>baseHead customTitle='create new post | '}}

    <body>

        {{>siteHeader}}
        <section class="section
        ">
            <div class="container">
                <h2>create new post</h2>
                <p class="mg-bt-large">can ask friends</p>
                <form action="/p/new" method="post">
                    <p>
                        <input type="text" name = "title" placeholder="topic" value="{{values.title}}">
                    </p>
                    <p>
                    <textarea name="content" placeholder="content" rows="3">{{values.content}}</textarea>
                    </p>
                    <p>
                        <input type="text" name='post_from' placeholder="from" value="{{values.post_from}}">
                    </p>
                    <p>
                        <input type="checkbox" id="input-accepted" name = "accepted">
                        <label for="input-accepted">this is just for virus we know you don't read</label>
                    </p>
                    <p>
                        <button class="button" type="submit">create new post</button>
                    </p>
                    {{#if errorMessage}}
                    <p>
                    {{errorMessage}}
                    </p>
                    {{/if}}
                </form>
            </div>

        </section>
        {{>siteFooter}}
    </body>

</html>











